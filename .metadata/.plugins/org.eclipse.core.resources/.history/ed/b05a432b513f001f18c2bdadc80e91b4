package sample_application;

public class AvgExam {

	static int math =100;
	static int sc = 90;
	static int eng = 80;
	static int kor = 70;
	
	static int sum = 0;
	static double avg =0;
	
	public int sum(int x , int y ,int z , int w) {
		int val = 0;
		val = x + y + z + w;
		
	}
	
	
	public static void main(String[] args) {
	
		sum = math + sc + eng + kor;
		avg = sum /4;
		System.out.println(sum);
		System.out.println(avg);
		
		
	}
}
